<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #581845;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DepartmentsController">
   <children>
      <TableView fx:id="deptsTable" fixedCellSize="70.0" prefHeight="540.0" prefWidth="800.0" stylesheets="@../resources/table-view.css">
         <columns>
            <TableColumn fx:id="deptColumn" prefWidth="394.0" text="Department" />
            <TableColumn fx:id="numberOfStudents" prefWidth="405.0" text="Number of Students" />
         </columns>
      </TableView>
      <Button fx:id="addDeptButton" layoutX="349.0" layoutY="550.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="46.0" style="-fx-background-color: #ffffff;">
         <graphic>
            <ImageView fitHeight="26.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/add.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <tooltip>
            <Tooltip text="Add new department" />
         </tooltip>
      </Button>
      <Button fx:id="deleteDeptButton" layoutX="405.0" layoutY="550.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="36.0" style="-fx-background-color: #ffffff;">
         <graphic>
            <ImageView fitHeight="26.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/delete.png" />
               </image>
            </ImageView>
         </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <tooltip>
            <Tooltip text="Delete department" />
         </tooltip>
      </Button>
   </children>
</AnchorPane>
